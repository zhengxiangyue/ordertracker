  </i-row>
</view>

  <view style="margin-top:20px;width:90vw;margin-bottom:20px">
    <i-row style="width:100%;margin-top:10px">
      <i-col span="24">
        <button bindtap="copyOrderNumber" style="border-radius:8px;width:80%;padding:8px 0;margin-bottom:20px" type="default" plain="true" >查看物流链接</button>
      </i-col>
    </i-row>    
  </view>

