  <i-row style="width:100%">
    <i-col span="8" i-class="col-class">
      收件人
    </i-col>
    <i-col span="16" i-class="col-class">
      {{ receiver }}
    </i-col>
  </i-row>
  <i-row style="width:100%;margin-top:10px">
    <i-col span="8" i-class="col-class">
      寄送至
